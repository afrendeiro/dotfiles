# ALIASES
alias c="clear"
alias grep="grep --color=auto"
alias refresh="source ~/.bashrc"
alias rm="rm -i"
alias mv="mv -i"
alias cp="cp -i"  
alias top="top -d 0.4"
alias who="who -u -H"

# Listing aliases
alias l="ls --color"
alias ll="ls -l -h --color"

# Movement aliases
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# Screen aliases
alias s="screen -ls"
alias ss="screen -S"
alias sr="screen -r"

# IP addresses
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"

# iPython
alias ipy=ipython
